{% extends 'base.html.twig' %}

{% block title %}Hello TicketController!{% endblock %}

{% block body %}
<style>


.bgContainer{

    width : 95vw;

    height : 100vh;

    display: flex;

    justify-content: center;

    flex-direction: column;

    align-items: center;
}

.ticketContainer{
      height: 500px;
      width: 50%;

      border: solid;

      border-radius: 20px;

      margin-left: 3vw;
}

.messageContent{
    
    border: solid;

    border-radius: 0px 20px 20px 20px;

    height: 20%;

    width: 80%;

    float: right; 

    margin-right: 10px;   
}

</style>


   <h1Voici tous vos tickets en attente</h1>
    
    <div class='bgContainer'>

 

    {% for ticket in tickets %}

           <div class = 'ticketContainer'>

                           <a href= '{{ path("deleteTicketPath", {"ticketId" :  ticket.id, "ticketStatus" : ticket.status} )}}'><h1>X</h1></a>

               Nom :   <h4>{{ ticket.username}}</h1><br>
               Numéro de téléphone : <p>{{ ticket.foneNumber}}</p><br>
               Statut : <p>Non traité</p><br>
                        <div class='messageContent'>
                          <p>{{ ticket.content}}</h1></p> </br>
                        </div>
               <a href= '{{ path("setTicketToDonePath", {"ticketId" :  ticket.id} )}}' ><button> Passer le ticket en 'fait'</button></a>
           </div>
    
           </br>

      {%endfor%}
    
      </div>

   {% endblock %}



