{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
<style>
        img{
          
          height : 150px;

        }

</style>



   <h1>Votre Panier</h1>


     {% if cart != null%}

          <h1>Voici votre panier</h1>

          <a href = '{{ path("clearCartPath") }}'><button>Vider le panier</button></a>

             <h2> Le prix à régler pour votre panier est de {{cartValue}} euros </h2>
            

             {%for image in cart %}

              {%if image.assetSrc is defined %}


             <img src="{{ asset(image.assetSrc) }}" alt="myflag">

             {%else%} 

             <h2 style='color:red'>Certains article ne peuvent pas être affiché, car ils ont sûrement été retirés de la vente par l'administrateur, veuillez s'il vous plait vider votre panier, et renouveler l'opération.</h2>





              {%endif%}
              {%endfor%}

              <br><br>



      {% else %}

        <h1>Vous n'avez aucun article</h1>

      {% endif %}




      
      <a href='{{path("paymentPagePath") }}'><button>Payer</button></a>

     
     {% if eventSeen != null %} 

     <a href = ' {{ path("showOneEventPath", { 'eventId' : eventSeen }) }}'><button>revenir à l'évènement</button></a>

     {% endif %}


{% endblock %}


